<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/framing"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/relativeLayout"
        android:id="@+id/relativeLayout2"
        android:background="#f7f8ff"
        android:layout_alignParentTop="true">

        <uk.ac.uea.framework.implementation.AutofitTextureView
            android:id="@+id/texture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />


        <FrameLayout
            android:id="@+id/control"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:backgroundTint="#00ff00d7"
            android:backgroundTintMode="src_over"
            android:clickable="false"
            android:background="#00ff00d7"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/Text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#fffcfd"
                android:textSize="30dp"
                android:gravity="center_horizontal|top"
                android:text="Title" />

            <TextView
                android:id="@+id/Text2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#fefff5"
                android:textSize="30dp"
                android:layout_gravity="center_horizontal|bottom"
                android:singleLine="false"
                android:gravity="center_horizontal|top"
                android:text="Description" />

        </FrameLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout"
        android:background="#010100">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="0dp"
            android:gravity="bottom">

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:src="@mipmap/savecar"
                android:scaleType="centerCrop"
                android:adjustViewBounds="false" />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button2"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:src="@mipmap/mapview"
                android:scaleType="centerCrop" />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button3"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:src="@mipmap/listview"
                android:scaleType="centerCrop" />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/button4"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/about"

                />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>



